import java.util.*;

public class BinarySearchTest {

    static int count;

    public static void main(String[] args) {
        
        // Use the helper code to generate arrays, calculate the max
        // iterations, and then find the actual iterations for a randomly
        // selected value.
        Scanner input = new Scanner(System.in);
        System.out.println("Array Size: 100");
        int size = 100;
        int[] arr = generateArrayOfLength(size);
        System.out.println("Max itterations: " + binaryMax(size));
        int rand = (int)(Math.random() * size);
        binaryRec(arr, arr[rand], 0, size);
        System.out.println("Actual iterations: " + count);
        System.out.println();
        count = 0;
        
        System.out.println("Array Size: 1000");
        int size2 = 1000;
        int[] arr2 = generateArrayOfLength(size2);
        System.out.println("Max itterations: " + binaryMax(size2));
        int rand2 = (int)(Math.random() * size2);
        binaryRec(arr2, arr2[rand2], 0, size2);
        System.out.println("Actual iterations: " + count);
        System.out.println();
        count = 0;
        
        System.out.println("Array Size: 10000");
        int size3 = 10000;
        int[] arr3 = generateArrayOfLength(size3);
        System.out.println("Max itterations: " + binaryMax(size3));
        int rand3 = (int)(Math.random() * size3);
        binaryRec(arr3, arr3[rand3], 0, size3);
        System.out.println("Actual iterations: " + count);
        System.out.println();
        count = 0;
        
        System.out.println("Array Size: 100000");
        int size4 = 100000;
        int[] arr4 = generateArrayOfLength(size4);
        System.out.println("Max itterations: " + binaryMax(size4));
        int rand4 = (int)(Math.random() * size4);
        binaryRec(arr4, arr4[rand4], 0, size4);
        System.out.println("Actual iterations: " + count);
        System.out.println();
        
    }

    public static int binaryRec(int[] array, int target, int begin, int end) {
        if (begin <= end)
        {
        	int mid = (begin + end) / 2;
            count ++;
        	// Base Case
        	if (target == array[mid]) {
        			return mid;
        	}
    
            if (target < array[mid]) {
                return binaryRec(array, target, begin, mid - 1);
            }
    
            if (target > array[mid]) {
                return binaryRec(array, target, mid + 1, end);
            }
        }
		return -1; //Alternate Base Case - not found
    }

    public static int[] generateArrayOfLength(int length)
    {
        int[] arr = new int[length];
        for(int i = 0; i < length; i++)
        {
            arr[i] = (int)(Math.random() * 100);
        }

        Arrays.sort(arr);

        return arr;
    }

    private static int binaryMax(int length) {
        return (int) (Math.log(length) / Math.log(2)) + 1;
    }
}
